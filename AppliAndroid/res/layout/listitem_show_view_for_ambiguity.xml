<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listitem_show_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_season"
    android:orientation="vertical"
    android:padding="@dimen/small" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


    <TextView
        android:id="@+id/listitem_show_name_tv"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:ellipsize="marquee"
        android:text="@string/hint_show_title"
        android:textAllCaps="false"
        android:textSize="@dimen/text_big" />

        <TextView
            android:id="@+id/listitem_show_first_aired_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:text="@string/hint_show_firs_aired_label"
            android:textAllCaps="false"
            android:textSize="@dimen/text_big" />

        <TextView
            android:id="@+id/listitem_show_first_aired"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:text="@string/hint_show_firs_aired"
            android:textAllCaps="false"
            android:textSize="@dimen/text_big" />

    </LinearLayout>
    <TextView
        android:id="@+id/listitem_show_info_tv"
        android:layout_marginTop="@dimen/small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/hint_show_title"
        android:textSize="@dimen/text_normal" />

</LinearLayout>